<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>A.M.E.S Report</title>
  </head>
  <style>
    *,
    *::after,
    *::before,
    html {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      background-color: white;
      font-family: sans-serif;
    }

    .bar {
      padding: 0.7rem 1rem;
      background: #09a3f0;
      border-bottom: 10px solid white;
      margin: 10px 20px;
    }

    header {
      color: white;
      padding: 1rem 1.5rem;
      background: #09a3f0;
      border-bottom: 10px solid white;
    }

    .flex {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .container {
      padding: 2rem;
      margin: auto;
    }

    /*Table*/
    table,
    .table {
      width: 100%;
      max-width: 100%;
      margin-bottom: 1rem;
      border-collapse: separate;
      border-spacing: 0;
      font-family: 'Courier New', Courier, monospace;
      font-size: 13px;
    }

    .table thead {
      background-color: #09a3f0;
    }
    .table thead tr th {
      color: #fff;
      font-weight: 900;
    }

    .table tbody tr:not(last-child) {
      border-top: 2px solid #ccc;
    }
    .table tbody tr:last-child {
      border-bottom: 2px solid #ccc;
    }

    .table th,
    .table td {
      vertical-align: top;
      text-align: left;
      border-right: 1px solid #ccc;
      border-bottom: 1px solid #ccc;
    }

    .table th:last-child,
    .table td:last-child {
      border-right: none;
    }

    .table thead th {
      vertical-align: bottom;
      padding: 1rem 0.5rem;
      border-bottom: 2px solid #ccc;
    }
    .table tbody td {
      vertical-align: bottom;
      padding: 1rem 0.5rem;
    }

    .table-sm th,
    .table-sm td {
      padding: 0.3rem;
    }

    .table-bordered {
      border: 1px solid #eee;
    }

    .table-bordered th,
    .table-bordered td {
      border: 1px solid #eceeef;
    }

    .table-bordered thead th,
    .table-bordered thead td {
      border-bottom-width: 2px;
    }

    .table-striped tbody tr:nth-of-type(even) {
      background-color: rgba(0, 0, 0, 0.05);
    }

    #report-footer {
      padding: 20px;
      background: #fafafa;
      border-top: 2px solid #09a3f0;
      margin: 0 auto;
    }

    .summary {
      margin-top: 1rem;
      text-align: right;
      font-weight: bold;
    }

    .summary-item {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 0.5rem;
    }

    .summary-label {
      margin-right: 1rem;
    }

    .summary-value {
      min-width: 100px;
    }
  </style>
  <body>
    <div class="bar"></div>
    <section class="flex" style="margin: 10px 20px">
      <div>
        <h1
          style="
            font-size: xx-large;
            font-weight: 900;
            text-transform: uppercase;
          "
        >
          Invoice
        </h1>
      </div>
      <img height="100px" src="<%= logoSrc %>" />
    </section>

    <!-- section for company details -->
    <section class="flex" style="margin: 10px 20px">
      <div>
        <p>AMES</p>
        <p>ames@gmail.com</p>
        <p>0501265634</p>
        <p>Kasoa</p>
      </div>
      <!-- date and Invoice Id -->
      <div>
        <p>Date: <%= new Date(info.created_at).toLocaleDateString() %></p>
        <p>Invoice ID: <%= info.job_card_id.slice(-10) %></p>
      </div>
    </section>

    <!-- section for customer details -->
    <section style="margin: 10px 20px">
      <h2>Customer Details</h2>
      <p>
        Name: <%= info.customer.first_name %> <%= info.customer.last_name %>
      </p>
      <p>Contact: <%= info.customer.contact %></p>
      <p>Email: <%= info.customer.email %></p>
      <p>Address: <%= info.customer.address %></p>
    </section>

    <!-- section for vehicle details -->
    <section style="margin: 10px 20px">
      <h2>Vehicle Details</h2>
      <p>Make: <%= info.jobs[0].vehicle_make %></p>
      <p>Model: <%= info.jobs[0].vehicle_model %></p>
      <p>Year: <%= info.jobs[0].vehicle_year %></p>
      <p>Registration Number: <%= info.jobs[0].vehicle_reg_no %></p>
    </section>

    <!-- section for invoice details -->
    <main>
      <div class="container">
        <table class="table table-sm table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Quantity</th>
              <th>Unit Cost</th>
              <th>Total Cost</th>
            </tr>
          </thead>
          <tbody>
            <% if (info.items_used && info.items_used.length > 0) { %> <%
            info.items_used.forEach((item) => { %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.quantity %></td>
              <td style="text-align: right"><%= item.unit_cost %></td>
              <td style="text-align: right"><%= item.total_cost %></td>
            </tr>
            <% }) %> <% } else { %>
            <tr>
              <td colspan="4"><center>No items used</center></td>
            </tr>
            <% } %>
          </tbody>
        </table>

        <% if (info.items_used && info.items_used.length > 0) { %>
        <div class="summary">
          <div class="summary-item">
            <span class="summary-label">Sub-total:</span>
            <span class="summary-value">
              <%= info.items_used.reduce((acc, item) => acc + item.total_cost,
              0) %>
            </span>
          </div>
          <div class="summary-item">
            <span class="summary-label">Tax:</span>
            <span class="summary-value">0</span>
          </div>
          <div class="summary-item">
            <span class="summary-label">Total Cost:</span>
            <span class="summary-value">
              <%= info.items_used.reduce((acc, item) => acc + item.total_cost,
              0) %>
            </span>
          </div>
        </div>
        <% } %>
      </div>
    </main>

    <!-- section for remarks -->
    <section style="margin: 10px 20px">
      <h2>Remarks</h2>
      <p><%= info.remarks %></p>
    </section>

    <footer id="report-footer">
      <center>
        <div class="text-grey text-center">
          &copy; <%= new Date().getFullYear() %> . All Rights Reserved
        </div>
      </center>
    </footer>

    <div class="bar"></div>
  </body>
</html>
